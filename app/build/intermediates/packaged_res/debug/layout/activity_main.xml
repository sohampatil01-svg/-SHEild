<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sheild_background"
    tools:context=".ui.MainActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sheild_blue_primary"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">
        
        <!-- === HOME TAB === -->
        <ScrollView
            android:id="@+id/viewHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SOS ALERT BUTTON -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSos"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="#FFEBEE"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp"
                    app:strokeColor="@color/sheild_red_alert"
                    app:strokeWidth="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="?attr/selectableItemBackground">
                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            app:tint="@color/sheild_red_alert"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HOLD FOR SOS"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@color/sheild_red_alert"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Release to Alert Contacts"
                            android:textSize="14sp"
                            android:textColor="@color/sheild_red_alert"
                            android:alpha="0.8"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Action Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">

                    <!-- Fake Call Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardFakeCall"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/sym_action_call"
                                app:tint="@color/sheild_blue_primary"/>
                            <TextView
                                android:text="Fake Call"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginTop="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvShakeStatus"
                                android:text="Shake: OFF"
                                android:textSize="12sp"
                                android:textColor="@color/text_grey"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Journey Tracking Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardJourney"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="?attr/selectableItemBackground">
                            <ImageView
                                android:id="@+id/ivJourney"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@android:drawable/ic_menu_mylocation"
                                app:tint="@color/text_grey"/>
                            <TextView
                                android:id="@+id/tvJourneyStatus"
                                android:text="Start Journey"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_marginTop="12dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Track Location"
                                android:textSize="12sp"
                                android:textColor="@color/text_grey"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>

                <!-- Live Tracking Log -->
                <TextView
                    android:id="@+id/tvTrackingLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:background="@drawable/bg_rounded_grey"
                    android:text="Tracking Inactive."
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
        </ScrollView>
        
        <!-- === HISTORY (COMMUNITY) TAB === -->
        <ScrollView
            android:id="@+id/viewCommunity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Incident History"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sheild_blue_primary"/>
                
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Log an incident..."
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIncident"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btnPostIncident"
                    android:text="Save to Log"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/sheild_blue_primary"/>
                
                <TextView
                    android:id="@+id/tvIncidentLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No recent logs."
                    android:layout_marginTop="24dp"
                    android:padding="16dp"
                    android:background="@color/white"/>
            </LinearLayout>
        </ScrollView>

        <!-- === SETTINGS TAB === -->
        <ScrollView
            android:id="@+id/viewSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
                    android:text="Configuration"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sheild_blue_primary"/>

                <!-- Emergency Contact -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:contentPadding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="Emergency Contact"
                            android:textStyle="bold"
                            android:textColor="@color/sheild_blue_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvSavedContact"
                            android:text="Not Set"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/etContactName"
                            android:hint="Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/etContactNumber"
                            android:hint="Phone"
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/btnSaveContact"
                            android:text="Save Contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/sheild_blue_primary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Fake Call Config -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp"
                    app:contentPadding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="Fake Call Settings"
                            android:textStyle="bold"
                            android:textColor="@color/sheild_blue_dark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/etFakeName"
                            android:hint="Caller Name (e.g. Dad)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/btnSaveCaller"
                            android:text="Update Caller ID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/sheild_blue_primary"/>
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchShake"
                            android:text="Shake to Trigger"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>

        <!-- === HELP TAB === -->
        <ScrollView
            android:id="@+id/viewInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="Help Center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sheild_blue_primary"/>
                    
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:contentPadding="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="ðŸš¨ Emergency Numbers"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="â€¢ Police: 100\nâ€¢ Women Helpline: 1091\nâ€¢ Domestic Abuse: 181"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:lineSpacingExtra="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentPadding="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="âš–ï¸ Legal Rights"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="â€¢ Zero FIR: File complaint at any station.\nâ€¢ Privacy: Identity protection for victims.\nâ€¢ No Arrest: Women cannot be arrested after sunset."
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/sheild_blue_primary"
        app:itemTextColor="@color/sheild_blue_primary"/>

</androidx.constraintlayout.widget.ConstraintLayout>